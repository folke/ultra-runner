{
  "name": "ultra-runner",
  "description": "Smart and beautiful script runner that hijacks any `npm run`, `yarn` and `npx` calls for ultra fast execution",
  "version": "1.0.8",
  "main": "lib/cli.js",
  "repository": "http://github.com/folke/ultra-runner",
  "author": "Folke Lemaitre <folke.lemaitre@gmail.com>",
  "license": "MIT",
  "bin": {
    "ultra": "bin/ultra.js"
  },
  "files": [
    "lib",
    "bin",
    "*.md"
  ],
  "keywords": [
    "cli",
    "command-line",
    "concurrent",
    "concurrently",
    "execution",
    "fast",
    "npm",
    "parallel",
    "run",
    "runner",
    "scripts",
    "terminal",
    "yarn"
  ],
  "husky": {
    "hooks": {
      "prepare-commit-msg": "npx --no-install devmoji -e --lint"
    }
  },
  "scripts": {
    "ultra:a": "sleep 3",
    "ultra:b": "sleep 3",
    "ultra:c": "sleep 3",
    "preultra": "echo pre",
    "ultra": "yarn ultra:a && yarn ultra:b && yarn ultra:c",
    "true": "true",
    "profile": "0x -o --output-dir \"0x/{name}{pid}\"",
    "tn": "ts-node --transpile-only",
    "generate:emoji": "npx ts-node --transpile-only src/scripts/updater.ts",
    "generate:config": "npx ts-interface-builder src/config-options.ts",
    "prebuild": "yarn clean && yarn lint && yarn test",
    "build:docs": "npx copyfiles *.md ../../",
    "build:rollup": "npx rollup -c",
    "build": "yarn build:rollup",
    "build:ts": "npx tsc -p tsconfig.build.json",
    "clean": "npx rimraf lib coverage *.log build 0x",
    "test": "npx jest",
    "test:cov": "npx jest --coverage --coverageProvider v8",
    "lint": "yarn lint:ts && yarn lint:eslint && yarn lint:docs",
    "lint:eslint": "npx eslint bin/*.js src/*.ts __tests__/*.ts --cache",
    "lint:docs": "npx markdownlint README.md",
    "lint:ts": "npx tsc -p tsconfig.build.json --noEmit",
    "lint:fix": "yarn lint:eslint --fix",
    "prerelease": "yarn build",
    "release": "npx standard-version",
    "postrelease": "git push --follow-tags origin master && npm publish"
  },
  "ultra": {
    "concurrent": [
      "lint",
      "prebuild",
      "ultra"
    ]
  },
  "devDependencies": {
    "0x": "4.9.1",
    "@rollup/plugin-commonjs": "11.0.1",
    "@rollup/plugin-json": "4.0.1",
    "@rollup/plugin-node-resolve": "7.0.0",
    "@rollup/plugin-typescript": "2.1.0",
    "@types/chai": "4.2.7",
    "@types/jest": "24.9.1",
    "@types/node": "13.5.0",
    "@types/sinon": "7.5.1",
    "@types/sinon-chai": "3.2.3",
    "@types/supports-color": "5.3.0",
    "@types/wrap-ansi": "3.0.0",
    "@typescript-eslint/eslint-plugin": "2.17.0",
    "@typescript-eslint/parser": "2.17.0",
    "chai": "4.2.0",
    "clinic": "5.0.0",
    "concurrently": "5.0.2",
    "conventional-changelog-cli": "2.0.31",
    "copyfiles": "2.2.0",
    "coveralls": "3.0.9",
    "devmoji": "2.1.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-plugin-chai-expect": "2.1.0",
    "eslint-plugin-import": "2.20.0",
    "eslint-plugin-jest": "23.6.0",
    "eslint-plugin-node": "11.0.0",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-unicorn": "15.0.1",
    "husky": "4.2.1",
    "jest": "25.1.0",
    "markdownlint-cli": "0.21.0",
    "prettier": "1.19.1",
    "rimraf": "3.0.0",
    "rollup": "1.29.1",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-progress": "1.1.1",
    "rollup-plugin-sizes": "1.0.1",
    "rollup-plugin-terser": "5.2.0",
    "rollup-plugin-visualizer": "3.3.1",
    "sinon": "8.1.1",
    "sinon-chai": "3.4.0",
    "standard-version": "7.1.0",
    "ts-jest": "25.0.0",
    "ts-node": "8.6.2",
    "tslib": "1.10.0",
    "typescript": "3.7.5"
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "cli-cursor": "^3.1.0",
    "cli-spinners": "^2.2.0",
    "commander": "^4.1.0",
    "shellwords-ts": "^2.0.4",
    "string-width": "^4.2.0",
    "supports-color": "^7.1.0",
    "wrap-ansi": "^6.2.0"
  }
}
